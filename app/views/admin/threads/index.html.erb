<p id="notice"><%= notice %></p>

<h1>Listing Admin Threads</h1>

<table>
  <thead>
    <tr>
      <th>Msg</th>
      <th>Thread time</th>
      <th>Thread by</th>
      <th>Thread text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_threads.each do |admin_thread| %>
      <tr>
        <td><%= admin_thread.msg_id %></td>
        <td><%= admin_thread.thread_time %></td>
        <td><%= admin_thread.thread_by %></td>
        <td><%= admin_thread.thread_text %></td>
        <td><%= link_to 'Show', admin_thread %></td>
        <td><%= link_to 'Edit', edit_admin_thread_path(admin_thread) %></td>
        <td><%= link_to 'Destroy', admin_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thread', new_admin_thread_path %>
